{
    "name": "simonlucalandi/scalp",
    "description": "Some Scala useful classes ported to PHP.",
    "authors": [
        {
            "name": "Paweł Wacławczyk",
            "email": "p.a.waclawczyk@gmail.com"
        },
        {
            "name": "Simonluca Landi",
            "email": "simonluca.landi@gmail.com"
        }
 
    ],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Scalp\\": "src/Scalp/"
        },
        "files": [
            "src/Scalp/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Scalp\\Tests\\": "tests/Scalp/"
        },
        "files": [
            "tests/Scalp/functions.php"
        ]
    },
    "require": {
        "php": "~7.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^3.3",
        "phpunit/phpunit": "^6.2.4"
    }
}
